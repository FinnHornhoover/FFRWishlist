<?import finnhh.ffrwishlist.scene.controller.SetMenuSceneController?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="finnhh.ffrwishlist.scene.controller.SetMenuSceneController">
    <children>
        <Label text="Set Menu" textFill="#01ae3e">
            <font>
                <Font size="32.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />
        <HBox spacing="10.0">
            <TextField fx:id="setSearchBar" onAction="#onSetSearchBarQueryEntered" promptText="Search for a Set" HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="setSelectComboBox" onAction="#onSetSelected" prefHeight="31.0" prefWidth="280.0" promptText="Choose a Set" />
        </HBox>
        <BorderPane prefWidth="200.0">
            <left>
                <Label text="The items in the selected set:" textFill="white" BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Label fx:id="profileLabel" textFill="white" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            </right>
        </BorderPane>
        <TableView id="itemTable" fx:id="itemPackTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="iconColumn" editable="false" resizable="false" sortable="false" text="Icon">
                    <minWidth>
                        <SetMenuSceneController fx:constant="ICON_ROW_WIDTH" />
                    </minWidth>
                    <maxWidth>
                        <SetMenuSceneController fx:constant="ICON_ROW_WIDTH" />
                    </maxWidth>
                </TableColumn>
                <TableColumn fx:id="nameColumn" editable="false" prefWidth="75.0" text="Name">
                    <minWidth>
                        <SetMenuSceneController fx:constant="NAME_ROW_MIN_WIDTH" />
                    </minWidth>
                </TableColumn>
                <TableColumn fx:id="levelColumn" editable="false" prefWidth="75.0" text="Level" />
                <TableColumn fx:id="typeColumn" editable="false" prefWidth="75.0" text="Type" />
                <TableColumn fx:id="rarityColumn" editable="false" prefWidth="75.0" text="Rarity" />
                <TableColumn fx:id="amountColumn" editable="false" prefWidth="75.0" text="Amount">
                    <minWidth>
                        <SetMenuSceneController fx:constant="AMOUNT_ROW_MIN_WIDTH" />
                    </minWidth>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button onAction="#onIncrementAllItemAmountsButtonClicked" mnemonicParsing="false" text="Increment All Item Amounts" />
                <Button onAction="#onAddAllToWishlistButtonClicked" mnemonicParsing="false" text="Add All to Wishlist" />
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="15.0" left="20.0" right="20.0" top="10.0" />
    </padding>
</VBox>
